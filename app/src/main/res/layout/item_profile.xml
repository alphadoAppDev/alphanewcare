<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/new_pink_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_white"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_pet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="24dp"
                            android:text="센"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_pet_info"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="12dp"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:gravity="center_vertical"
                            android:text="스코티쉬폴드"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_birthday"/>
                            <TextView
                                android:id="@+id/tv_brith"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="11dp"
                                android:textColor="@color/colorBlack"
                                android:text="2015.5.25(4살)"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="8dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_weight"/>
                            <TextView
                                android:id="@+id/tv_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="11dp"
                                android:textColor="@color/colorBlack"
                                android:text="3.5kg"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circlle_pet_picture"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:civ_border_width="2dp"
            android:layout_marginTop="40dp"
            app:civ_border_color="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circle_picture"/>
    </RelativeLayout>
</RelativeLayout>