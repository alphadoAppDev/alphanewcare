<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_content" >
    <TextView
        android:id="@+id/txtTestNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="#042c5c"
        android:letterSpacing="0.03"
        android:text="1차"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">
        <TextView
            android:id="@+id/txtTestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#77869e"
            android:letterSpacing="0.02"
            android:text = "2019.08.24"/>
        <TextView
            android:id="@+id/txtTestTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="#77869e"
            android:letterSpacing="0.02"
            android:text = "10:21:39"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:gravity="end|center_vertical">
        <ImageView
            android:id="@+id/imgArrowNormal"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_down_blue"/>
        <ImageView
            android:id="@+id/imgArrowAlert"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/arrow_up_red"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtNormalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#3571da"
            android:letterSpacing="0.02"
            android:text = "정상2"/>
        <TextView
            android:id="@+id/txtAlertCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ed2d37"
            android:letterSpacing="0.02"
            android:text = "의심8"/>

    </LinearLayout>
</LinearLayout>
