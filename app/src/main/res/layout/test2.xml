<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/test_result_yellow">

    <RelativeLayout
        android:id="@+id/relative_main_content_box"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/round_white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_add_camera"/>
        <ImageView
            android:id="@+id/imgAddPet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_plus"
            android:onClick="btnAddPet"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtRegisterNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:text="등록번호"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lySelectedPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp">
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="#77869e"
            android:letterSpacing="0.02"
            android:textSize="13sp"
            android:text = ""/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/circle_plus"
            android:onClick="btnAddPet"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="123dp"
            android:layout_height="123dp"
            app:civ_border_width="2dp"
            android:layout_marginTop="12dp"
            app:civ_border_color="#FF0000"
            android:layout_centerHorizontal="true"
            android:src="@drawable/circle_picture"/>

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="#042c5c"
            android:letterSpacing="0.03"
            android:text = ""/>

        <TextView
            android:id="@+id/txtBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/txtName"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:textColor="#77869e"
            android:letterSpacing="0.02"
            android:text = ""/>

        <TextView
            android:id="@+id/txtWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/txtBirth"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:textColor="#77869e"
            android:letterSpacing="0.02"
            android:text = ""/>


    </RelativeLayout>
</LinearLayout>