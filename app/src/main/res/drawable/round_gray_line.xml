<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <size
                android:width="60dp"
                android:height="60dp" />

            <solid
                android:color="@color/colorWhite" />
            <stroke
                android:width="1dp"
                android:color="@color/new_gray_3" />
        </shape>
    </item>
</layer-list>